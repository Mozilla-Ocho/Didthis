{
  "compilerOptions": {
    "module": "CommonJS",
    "outDir": "./build",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"],
}
